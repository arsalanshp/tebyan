<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="bottom|center_horizontal"
    android:background="#9000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/new_folder"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_create_new_folder_white_48dp"
            android:background="@drawable/dialog_button_background_darker_green" />

        <ImageButton
            android:id="@+id/upload_file"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_file_upload_white_48dp"
            android:background="@drawable/dialog_button_background_darker_indigo"/>

        <ImageButton
            android:id="@+id/upload_film"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_add_a_photo_white_48dp"
            android:background="@drawable/dialog_button_background_darker_orange"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/upload_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:src="@drawable/ic_insert_photo_white_48dp"
            android:background="@drawable/dialog_button_background_darker_green"/>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:background="@drawable/dialog_button_background_darker_green"/>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:background="@drawable/dialog_button_background_darker_green"/>
    </LinearLayout>
</LinearLayout>